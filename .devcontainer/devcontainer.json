{
	"name": "Python 3",
	"image": "mcr.microsoft.com/devcontainers/python:1-3.10-bookworm",
	"postCreateCommand": "pip3 install pylint discord python-dotenv aiohttp flask",
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.flake8",
				"ms-python.autopep8",
				"GitHub.copilot"
			]
		}
	},
	"mounts": [
		"source=${localEnv:HOME}/.ssh,target=/home/vscode/.ssh,type=bind,consistency=cached"
	]
}